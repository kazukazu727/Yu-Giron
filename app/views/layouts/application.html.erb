<!DOCTYPE html>
<html>
  <head>
    <title>YuGiron</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-bottom">
      <nav class="navbar navbar-expand-lg navbar-light p-5" style="background-color: #e3f2fd;">
        <div class="container">
            <%=link_to root_path, class: "navbar-brand" do %>
            <h3>Yu_Giron</h3>
            <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if signed_in? %>
              <div><i class="fas fa-bullhorn"></i>ようこそ、<strong><%= current_user.name %></strong>さん！</div>
              <li class="nav-item">
                <%= link_to "マイページ",user_mypage_path, class: "nav-link text-dark border border-dark rounded" %>
              </li>
              <li class="nav-item">
                <%= link_to "レビュー一覧",reviews_path, class: "nav-link text-dark border border-dark rounded" %>
              </li>
              <li class="nav-item">
                <%= link_to "ランキング",reviews_path, class: "nav-link text-dark border border-dark rounded" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト",destroy_user_session_path, method: :delete, class: "nav-link text-dark border border-dark rounded" %>
              </li>
              <% else %>
              <li class="nav-item">
                <%=link_to "About",about_path, class: "nav-link text-dark border border-dark rounded" %>
              </li>
              <li class="nav-item">
                <%=link_to "商品一覧",reviews_path, class: "nav-link text-dark border border-dark rounded" %>
              </li>
              <li class="nav-item">
                <%=link_to "新規登録",new_user_registration_path, class: "nav-link text-dark border border-dark rounded" %>
              </li>
              <li class="nav-item">
                <%=link_to "ログイン",new_user_session_path, class: "nav-link text-dark border border-dark rounded" %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand">検索欄</a>
            <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
      </nav>
    </div>
    </header>

    <main>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      <p id="notice"></p>

    <%= yield %>
    </main>

    <footer>

    </footer>
  </body>
</html>
