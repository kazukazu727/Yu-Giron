<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <% if user_signed_in? && @user ==current_user %>
      <h3><%= @user.name %>のマイページ</h3>
      <% else %>
      <h3><%= @user.name %>のユーザーページ</h3>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <h4>登録情報</h4>
    </div>
    <div class="col-lg-2">
      <% if user_signed_in? && @user ==current_user %>
        <%= link_to"編集する", "/users/:id/edit", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table-bordered">
        <tr>
          <th class="col-lg-2 active">ユーザーネーム</th>
          <td class="col-lg-8",><%= @user.name %></td>
        </tr>
        <tr>
          <th class="col-lg-2 active">メールアドレス</th>
          <td class="col-lg-8"><%= @user.email %></td>
        </tr>
        <tr>
          <th class="col-lg-2 active">紹介文</th>
          <td class="col-lg-8"><%= @user.introduction %></td>
        </tr>
      </table>
    </div>

      <div class="col-lg-2">
        <h4>お気に入り</h4>
      </div>
      <div class="col-lg-2">
        <%= link_to "一覧を見る", favorites_user_path(@user), class: "btn btn-info" %>
      </div>

      <div class="col-lg-2">
        <h4>フォロー一覧</h4>
      </div>
      <div class="col-lg-2">
          <div class="link_index">
            <%= link_to "一覧を見る", user_followings_path(@user), class: "btn btn-info" %>
          </div>
      </div>

       <div class="col-lg-2">
        <h4>フォロワー一覧</h4>
      </div>
      <div class="col-lg-2">
          <div class="link_index">
            <%= link_to "一覧を見る", user_followers_path(@user), class: "btn btn-info" %>
          </div>
      </div>

      <div class="col-lg-2">
        <% if user_signed_in? && @user !=current_user %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
          <% end %>
        <% end %>
      </div>
  </div>

  <div class="row">
    <div class="col-lg-3">
      <h3>マイレビュー</h3>
    </div>

    <div class="col-lg-8">
				<%= link_to new_review_path do %>
					<span class="item-plus"><i class="fas fa-plus-circle"></i></span>
				<% end %>
		</div>

    <div class="col-lg-offset-1 col-lg-10">
      <table class="table">
        <tr class="active" style="font-weight: bold">
          <td>ID</td>
          <td>タイトル</td>
          <td>ジャンル</td>
          <td>プレイ時間</td>
        </tr>
        <% @reviews.each do |review| %>
        <tr>
          <td><%= review.id %></td>
          <td><%= link_to review.tittle, review_path(review) %></td>
          <td>
            <%= review.genre.name %>
          </td>
          <td><%= review.play_time.name %></td>
        </tr>
        <%end%>
      </table>
    </div>
  </div>


</div>