<% if @users.exists? %>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <h3>一覧</h3>
      </div>

      <div class="col-lg-offset-1 col-lg-10">
        <table class="table">
          <tr class="active" style="font-weight: bold">
            <td>ニックネーム</td>
            <td>フォロー数</td>
            <td>フォロワー数</td>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.followings.count %></td>
            <td><%= user.followers.count %></td>
          </tr>
          <%end%>
        </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
      </div>
    </div>
  </div>



